<resources>

    <style name="BaseToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="navigationIcon">@drawable/ic_ab_back</item>
        <item name="titleTextAppearance">@style/BaseToolbarTitle</item>
        <item name="subtitleTextAppearance">@style/BaseToolbarSubtitle</item>
    </style>

    <style name="BaseToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BaseToolbarSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppToolbar" parent="BaseToolbar" />

    <style name="TransparentToolbar" parent="BaseToolbar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FadeWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MainWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/BaseToolbar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentDialog" parent="BaseDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CompletelyTransparentDialog" parent="TransparentDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="FloatingActionMode" parent="Theme.AppCompat.Light">
        <item name="floatingActionModeBackgroundColor">?colorBackgroundFloating</item>
        <item name="floatingActionModeBackgroundCornerRadius">?dialogCornerRadius</item>
        <item name="floatingActionModeElevation">2dp</item>
        <item name="floatingActionModeOverflowButtonBackground">?actionBarItemBackground</item>
        <item name="floatingActionModeItemBackground">?selectableItemBackground</item>
        <item name="floatingActionModeItemTextAppearance">?textAppearanceListItemSmall</item>
        <item name="floatingActionModeItemTextColor">#FF000000</item>
        <item name="floatingActionModeItemTextSize">14sp</item>
    </style>

    <style name="Animation.Dialog.Sheet" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/sheet_exit</item>
    </style>

    <style name="Animation.Dialog.Center" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="Theme.Dialog.Sheet" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.36</item>
        <item name="android:windowElevation">10dp</item>
        <item name="android:windowClipToOutline">true</item>
    </style>
    <style name="Theme.Dialog.Center" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.36</item>
        <item name="android:windowElevation">10dp</item>
        <item name="android:windowClipToOutline">true</item>
    </style>
</resources>
